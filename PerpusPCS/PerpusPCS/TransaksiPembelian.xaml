<Window x:Class="PerpusPCS.TransaksiPembelian"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerpusPCS"
        mc:Ignorable="d"
        Title="TransaksiPembelian" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgvPremium" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="2" Height="300"/>
        <StackPanel  Grid.Column="1" Grid.Row="1" >
            <StackPanel Orientation="Horizontal" Margin="60 20 0 0">
                <Label Content="ID" MinWidth="100"></Label>
                <TextBox Text="PlaceHolder" MinWidth="150" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="60 20 0 0">
                <Label Content="Judul" MinWidth="100"></Label>
                <TextBox Text="PlaceHolder" MinWidth="150" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="60 20 0 0">
                <Label Content="Author" MinWidth="100"></Label>
                <TextBox Text="PlaceHolder" MinWidth="150" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="60 20 0 0">
                <Label Content="Penerbit" MinWidth="100"></Label>
                <TextBox Text="PlaceHolder" MinWidth="150" HorizontalAlignment="Center"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
