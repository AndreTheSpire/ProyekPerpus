        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerpusPCS"
        mc:Ignorable="d"
        Title="ConnectionPage" Height="381.923" Width="621.544">
    <Grid>
        <Label Content="Connection To DataBase" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="317" FontSize="16"/>
        <Label Content="DataBase" HorizontalAlignment="Left" Margin="35,63,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="35,118,0,0" VerticalAlignment="Top" FontSize="16"/>
